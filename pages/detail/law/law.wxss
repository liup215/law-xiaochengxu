.detail_container{
  padding:0em 0.5em
}

.detail_container .title{
  font-weight: bolder;
  font-size: 2em
}

.detail_container .info{
  display: flex;
  flex-direction: column;
  padding-top: 0.5em;
}

.detail_container .info .row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 0.5em;
}

.detail_container .info .row .block{
  display: flex;
  flex-direction: column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  width:5em;
  height: 3em;
  border-style:solid;
  border-width: 0.05em;
  border-color: red;
  border-radius:0.6em;
}

.detail_container .info .row .block .item_key{
  font-size: 0.8em;
}

.detail_container .info .row .block .item_value{
  font-size: 0.8em;
  color:#666666;
}

.detail_container .info .detail{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 0.5em;
}

.detail_container .info .detail .header{
  font-size: 1.2em;
}
.detail_container .info .detail .body{

  padding-top:0.3em;
  padding-left:0.5em;
  padding-bottom:0.5em;
  color: #666666;
}
